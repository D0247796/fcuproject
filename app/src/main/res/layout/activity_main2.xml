<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="lincyu.table.Main2Activity"
    android:background="@drawable/bround">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/frameLayout"
        android:layout_toStartOf="@+id/linearLayout">

        <SurfaceView
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:id="@+id/surfaceView" />


    </FrameLayout>

    <GridLayout
        android:layout_width="400dp"
        android:layout_height="200dp"
        android:id="@+id/gridLayout"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="上"
            android:id="@+id/bt_top"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_columnWeight="1"
            android:background="@drawable/buntton" />

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="左"
            android:id="@+id/bt_left"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_columnSpan="1"
            android:background="@drawable/buntton" />

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="下"
            android:id="@+id/bt_do"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:background="@drawable/buntton" />

        <Button
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="右"
            android:id="@+id/bt_right"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_columnSpan="1"
            android:background="@drawable/buntton" />

    </GridLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/gridLayout"
        android:id="@+id/linearLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/gridLayout">

        <Switch
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="影像"
            android:id="@+id/sw_Image"
            android:layout_marginBottom="22dp"
            android:layout_alignBottom="@+id/View"
            android:layout_alignStart="@+id/sw_Voice"
            android:background="#7f00ddff" />

        <Switch
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="聲音"
            android:id="@+id/sw_Voice"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="#7f00ddff" />

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:text="錄音"
            android:id="@+id/bt_voiceStart"
            android:background="@drawable/buntton" />

        <Button
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:text="停止"
            android:id="@+id/bt_voiceEnd"
            android:background="@drawable/buntton" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/frameLayout"
        android:layout_toEndOf="@+id/frameLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="碰撞: "
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="水位: "
            android:id="@+id/textView2"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/fine"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/fine"
            android:layout_alignTop="@+id/textView2"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>
